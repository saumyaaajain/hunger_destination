<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="text-center">Create New Restaurant</h1>
        <div style="width:30%;margin:30px auto" >
            <form action="/restaurants" method="POST">
                <div class="form-group">
                    <input type="text" placeholder="name" name="name" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" placeholder="Image-Url" name="image" class="form-control">       
                </div>
                 <div class="form-group">
                    <input type="text" placeholder="description" name="description" class="form-control">
                </div>  
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn default btn-block">Submit</button>
                </div>
            </form>
            <a href="/restaurants">Go Back</a>
        </div>
    </div>
    
</div>
<% include ../partials/footer %>