<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="text-center">Edit <%=restaurant.title%> Restaurant</h1>
        <div style="width:30%;margin:30px auto" >
            <form action="/restaurants/<%=restaurant._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" placeholder="name" name="restaurant[title]" class="form-control" value="<%=restaurant.title%>">
                </div>    
                <div class="form-group">
                    <input type="number" placeholder="price" name="restaurant[price]" class="form-control" min="0.01" step="0.01" value="<%=restaurant.price%>">
                </div> 
                <div class="form-group">
                    <input type="text" placeholder="Image-Url" name="restaurant[image]" class="form-control" value="<%=restaurant.image%>">
                </div>
                 <div class="form-group">
                    <input type="text" placeholder="description" name="restaurant[description]" class="form-control" value="<%= restaurant.description %>">
                </div>  
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn default btn-block">Edit</button>
                </div>
            </form>
            <a href="/restaurants">Go Back</a>
        </div>
    </div>
    
</div>
<% include ../partials/footer %>