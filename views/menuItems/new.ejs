<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="text-center">Add New Menu Item to <%=restaurant.title%></h1>
        <div style="width:30%;margin:30px auto" >
            <form action="/restaurants/<%=restaurant._id%>/menuItems" method="POST">
                <div class="form-group">
                    <input type="text" placeholder="Menu Item goes here" name="menuItems[text]" class="form-control">
                </div>
                <div class="form-group">
                    <input type="number" placeholder="price" name="menuItems[price]" class="form-control" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input type="text" placeholder="type" name="menuItems[type]" class="form-control">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn default btn-block">Submit</button>
                </div>
            </form>
            <a href="/restaurants">Go Back</a>
        </div>
    </div>
    
</div>
<% include ../partials/footer %>